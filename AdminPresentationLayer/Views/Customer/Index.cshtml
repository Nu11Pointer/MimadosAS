
@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10"> <h6 class="m-0 font-weight-bold text-primary">Clientes</h6> </div>
            </div>
            <hr />
            <div class="row float-right">
                <a href="#" class="btn btn-success btn-icon-split btn-sm" onclick="ShowCreateModal()">
                    <span class="icon text-white-50">
                        <i class="fas fa-user"></i>
                    </span>
                    <span class="text">Nuevo Cliente</span>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        @*<th>Cédula</th>*@
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Departamento</th>
                        <th>Municipio</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Modal-->
<div class="modal fade" id="FormModalCreate" tabindex="-1" aria-labelledby="exampleModalLabel"
     aria-hidden="true" data-bs-backdrop="static">

    <div class="modal-dialog">

        @*Contenido*@
        <div class="modal-content">

            @*Cabecera*@
            <div class="modal-header">

                <h5 class="modal-title" id="exampleModalLabel">Nuevo Cliente</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>

            </div>

            @*Cuerpo*@
            <div class="modal-body">

                @*Inputs*@
                <form id="CreateForm" class="row">

                    @* Cedula *@
                    <div class="col-sm-6">
                        <label for="IdentitityCardCreate" class="form-label">Cedula</label>
                        <input type="text" class="form-control" id="IdentitityCardCreate" name="IdentitityCardCreate" autocomplete="off" maxlength="16">
                    </div>

                    @* Nombre *@
                    <div class="col-sm-6">
                        <label for="NameCreate" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="NameCreate" name="NameCreate" autocomplete="off">
                    </div>

                    @* Apellido *@
                    <div class="col-sm-6">
                        <label for="SurNameCreate" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="SurNameCreate" name="SurNameCreate" autocomplete="off">
                    </div>

                    @* Estado *@
                    <div class="col-sm-6">
                        <label for="ActiveCreate" class="form-label">Activo</label>
                        <select class="form-control" id="ActiveCreate">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>

                    @* Departmento *@
                    <div class="col-sm-6">
                        <label for="DepartmentCreate" class="form-label">Departamento</label>
                        <select class="form-control" id="DepartmentCreate" onchange="MunicipalityOnChange()">
                        </select>
                    </div>

                    @* Municipio *@
                    <div class="col-sm-6">
                        <label for="MunicipalityCreate" class="form-label">Municipio</label>
                        <select class="form-control" id="MunicipalityCreate">
                        </select>
                    </div>

                    @* Dirección *@
                    <div class="col-sm-12">
                        <label for="AddressCreate" class="form-label">Dirección</label>
                        <textarea type="text" class="form-control" id="AddressCreate"
                                  style="height:86px;resize:none" autocomplete="off" maxlength="250" name="AddressCreate"></textarea>
                    </div>

                </form>

                @* Mensaje Error *@
                <div class="row mt-4">
                    <div class="col-12">
                        <div id="ErrorCreate" class="alert alert-danger" role="alert">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                <button class="btn btn-primary" type="button" onclick="Create()">Crear</button>
            </div>
        </div>
    </div>
</div>

