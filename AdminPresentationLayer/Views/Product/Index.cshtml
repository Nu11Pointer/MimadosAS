@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10">
                    <h6 class="m-0 font-weight-bold text-primary">Productos</h6>
                </div>
            </div>
            <hr />
            <div class="row float-right">
                <a href="#" class="btn btn-success btn-icon-split btn-sm" onclick="ShowCreateModal()">
                    <span class="icon text-white-50">
                        <i class="fas fa-box-open"></i>
                    </span>
                    <span class="text">Nuevo Producto</span>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Marca</th>
                        <th>Categoría</th>
                        <th>Contenido Neto</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Modal-->
<div class="modal fade" id="FormModalCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
    data-bs-backdrop="static">

    <div class="modal-dialog">

        @*Contenido*@
        <div class="modal-content">

            @*Cabecera*@
            <div class="modal-header">

                <h5 class="modal-title" id="exampleModalLabel">Nuevo Producto</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>

            </div>

            @*Cuerpo*@
            <div class="modal-body">

                @*Inputs*@
                <form id="CreateForm" class="row">

                    @* Nombre *@
                    <div class="col-sm-6">
                        <label for="NameCreate" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="NameCreate" name="NameCreate" autocomplete="off">
                    </div>

                    @* Marca *@
                    <div class="col-sm-6">
                        <label for="ProductBrandCreate" class="form-label">Marca</label>
                        <select class="form-control" id="ProductBrandCreate">
                        </select>
                    </div>

                    @* Categoría *@
                    <div class="col-sm-6">
                        <label for="ProductCategoryCreate" class="form-label">Categoría</label>
                        <select class="form-control" id="ProductCategoryCreate">
                        </select>
                    </div>

                    @* ProductPackaging *@
                    <div class="col-sm-6">
                        <label for="ProductCategoryCreate" class="form-label">Presentación</label>
                        <select class="form-control" id="ProductPackagingCreate">
                        </select>
                    </div>

                    @* NetContent *@
                    <div class="col-sm-6">
                        <label for="SalePriceCreate" class="form-label">Contenido Neto</label>
                        <input type="number" min="0.01" class="form-control" id="NetContentCreate" name="NetContentCreate"
                            autocomplete="off">
                    </div>

                    @* ProductMeasurementUnit *@
                    <div class="col-sm-6">
                        <label for="ProductCategoryCreate" class="form-label">Unidad de Medida</label>
                        <select class="form-control" id="ProductMeasurementUnitCreate">
                        </select>
                    </div>

                    @* Precio Venta *@
                    <div class="col-sm-6">
                        <label for="SalePriceCreate" class="form-label">Precio Venta</label>
                        <input type="number" min="0" class="form-control" id="SalePriceCreate" name="SalePriceCreate"
                            autocomplete="off">
                    </div>

                    @* Stock *@
                    <div class="col-sm-6">
                        <label for="StockCreate" class="form-label">Stock</label>
                        <input type="number" min="0" step="1" class="form-control" id="StockCreate" name="StockCreate"
                            autocomplete="off">
                    </div>

                    @* Estado *@
                    <div class="col-sm-6">
                        <label for="ActiveCreate" class="form-label">Activo</label>
                        <select class="form-control" id="ActiveCreate">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>

                    @* Descripción *@
                    <div class="col-sm-12">
                        <label for="DescriptionCreate" class="form-label">Descripción</label>
                        <textarea type="text" class="form-control" id="DescriptionCreate"
                            style="height:86px;resize:none" autocomplete="off" name="DescriptionCreate"></textarea>
                    </div>

                </form>

                @* Mensaje Error *@
                <div class="row mt-4">
                    <div class="col-12">
                        <div id="ErrorCreate" class="alert alert-danger" role="alert">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                <button class="btn btn-primary" type="button" onclick="Create()">Crear</button>
            </div>
        </div>
    </div>
</div>

<!-- Update Modal-->
<div class="modal fade" id="FormModalUpdate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
    data-bs-backdrop="static">

    <div class="modal-dialog">

        @*Contenido*@
        <div class="modal-content">

            @*Cabecera*@
            <div class="modal-header">

                <h5 class="modal-title" id="exampleModalLabel">Actualizar Producto</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>

            </div>

            @*Cuerpo*@
            <div class="modal-body">

                @*Inputs*@
                <form id="UpdateForm" class="row">

                    @* Nombre *@
                    <div class="col-sm-6">
                        <label for="NameUpdate" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="NameUpdate" name="NameUpdate" autocomplete="off">
                    </div>

                    @* Marca *@
                    <div class="col-sm-6">
                        <label for="ProductBrandUpdate" class="form-label">Marca</label>
                        <select class="form-control" id="ProductBrandUpdate">
                        </select>
                    </div>

                    @* Categoría *@
                    <div class="col-sm-6">
                        <label for="ProductCategoryUpdate" class="form-label">Categoría</label>
                        <select class="form-control" id="ProductCategoryUpdate">
                        </select>
                    </div>

                    @* ProductPackaging *@
                    <div class="col-sm-6">
                        <label for="ProductCategoryUpdate" class="form-label">Presentación</label>
                        <select class="form-control" id="ProductPackagingUpdate">
                        </select>
                    </div>

                    @* NetContent *@
                    <div class="col-sm-6">
                        <label for="SalePriceUpdate" class="form-label">Contenido Neto</label>
                        <input type="number" min="0.01" class="form-control" id="NetContentUpdate" name="NetContentUpdate"
                            autocomplete="off">
                    </div>

                    @* ProductMeasurementUnit *@
                    <div class="col-sm-6">
                        <label for="ProductCategoryUpdate" class="form-label">Unidad de Medida</label>
                        <select class="form-control" id="ProductMeasurementUnitUpdate">
                        </select>
                    </div>

                    @* Precio Venta *@
                    <div class="col-sm-6">
                        <label for="SalePriceUpdate" class="form-label">Precio Venta</label>
                        <input type="number" min="0" step="0.25" class="form-control" id="SalePriceUpdate"
                            name="SalePriceUpdate" autocomplete="off">
                    </div>

                    @* Stock *@
                    <div class="col-sm-6">
                        <label for="StockUpdate" class="form-label">Stock</label>
                        <input type="number" min="0" step="1" class="form-control" id="StockUpdate" name="StockUpdate"
                            autocomplete="off">
                    </div>

                    @* Estado *@
                    <div class="col-sm-6">
                        <label for="ActiveUpdate" class="form-label">Activo</label>
                        <select class="form-control" id="ActiveUpdate">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>

                    @* Descripción *@
                    <div class="col-sm-12">
                        <label for="DescriptionUpdate" class="form-label">Descripción</label>
                        <textarea type="text" class="form-control" id="DescriptionUpdate"
                            style="height:86px;resize:none" autocomplete="off" name="DescriptionUpdate"></textarea>
                    </div>

                </form>

                @* Mensaje Error *@
                <div class="row mt-4">
                    <div class="col-12">
                        <div id="ErrorUpdate" class="alert alert-danger" role="alert">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                <button class="btn btn-primary" type="button" onclick="Update()">Actualizar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Product/Product.js"></script>
