@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10">
                    <h6 class="m-0 font-weight-bold text-primary">Usuarios</h6>
                </div>
            </div>
            <hr />
            <div class="row float-right">
                <a href="#" class="btn btn-success btn-icon-split btn-sm" onclick="ShowEmployeeCreate()">
                    <span class="icon text-white-50">
                        <i class="fa-solid fa-user-astronaut"></i>
                    </span>
                    <span class="text">Nuevo Usuario</span>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Sucursal</th>
                        <th>Cargo</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Modal-->
<div class="modal fade" id="FormModalCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
    data-bs-backdrop="static">

    <div class="modal-dialog">

        @*Contenido*@
        <div class="modal-content">

            @*Cabecera*@
            <div class="modal-header">

                <h5 class="modal-title" id="exampleModalLabel">Nuevo Usuario</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>

            </div>

            @*Cuerpo*@
            <div class="modal-body">

                @*Inputs*@
                <form id="CreateForm" class="row">

                    @* Correo *@
                    <div class="col-sm-6">
                        <label for="EmailCreate" class="form-label">Correo</label>
                        <input type="text" class="form-control" id="EmailCreate" name="EmailCreate" autocomplete="off"
                            readonly="readonly">
                    </div>

                    @* Nombre *@
                    <div class="col-sm-6">
                        <label for="EmployeeNameCreate" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="EmployeeNameCreate" name="EmployeeNameCreate"
                            autocomplete="off" readonly="readonly">
                    </div>

                    @* Sucursal *@
                    <div class="col-sm-6">
                        <label for="BranchOfficeCreate" class="form-label">Sucursal</label>
                        <input type="text" class="form-control" id="BranchOfficeCreate" name="BranchOfficeCreate"
                            autocomplete="off" readonly="readonly">
                    </div>

                    @* Cargo *@
                    <div class="col-sm-6">
                        <label for="EmployeePositionCreate" class="form-label">Cargo</label>
                        <input type="text" class="form-control" id="EmployeePositionCreate"
                            name="EmployeePositionCreate" autocomplete="off" readonly="readonly">
                    </div>

                    @* Estado *@
                    <div class="col-sm-6">
                        <label for="ActiveCreate" class="form-label">Activo</label>
                        <select class="form-control" id="ActiveCreate">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>

                </form>

                @* Mensaje Error *@
                <div class="row mt-4">
                    <div class="col-12">
                        <div id="ErrorCreate" class="alert alert-danger" role="alert">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                <button class="btn btn-primary" type="button" onclick="Create()">Crear</button>
            </div>
        </div>
    </div>
</div>

<!-- Employee Modal-->
<div class="modal fade" id="FormModalEmployee" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">

    <div class="modal-dialog modal-lg">

