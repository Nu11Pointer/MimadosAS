                            Exportar PDF
                            <i class="fas fa-file-pdf ml-1"></i>
                        </button>
                    </div>
                </div> *@

            </div>

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Fecha</th>
                        <th>Cliente</th>
                        <th>Total C$</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/Scripts/Sale/SaleHistory.js"></script>
