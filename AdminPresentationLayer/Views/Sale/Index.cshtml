@{
    ViewBag.Title = "Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                Facturar

                <a id="btnTerminarGuardarVenta" href="#" class="btn btn-warning btn-icon-split btn-sm float-right">
                    <span class="icon text-white-50">
                        <i class="fa fa-print" aria-hidden="true"></i>
                    </span>
                    <span class="text">Finalizar</span>
                </a>

            </div>
            <div class="card-body p-2 card-venta">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="input-group input-group-sm mb-2">
                            <div class="input-group-prepend">
                                <label class="input-group-text bg-secondary text-white" for="inputGroupSelect01">Fecha
                                    de Venta</label>
                            </div>
                            <input id="txtfechaventa" readonly type="text" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card shadow mb-2">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-10">
                                        <h6 class="card-title mb-1">Sucursal</h6>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="float-right">
                                            <a class="btn btn-light btn-sm" data-toggle="collapse" href="#collapse1"
                                                role="button" aria-expanded="true" aria-controls="collapseExample">
                                                <i class="fa fa-bars" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                    </div>

                                </div>

                                <div class="row collapse show" id="collapse1">
                                    <input id="txtIdTienda" type="hidden" value="0" />
                                    <div class="col-sm-12">
                                        <div class="form-group mb-0">
                                            <label for="txtRazonSocialProveedor"
                                                class="col-form-label col-form-label-sm">Nombre:</label>
                                            <label class="form-control form-control-sm model mb-1" readonly
                                                id="lbltiendanombre"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="card shadow mb-2">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-10">
                                        <h6 class="card-title mb-1">Empleado</h6>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="float-right">
                                            <a class="btn btn-light btn-sm" data-toggle="collapse" href="#collapse2"
                                                role="button" aria-expanded="true" aria-controls="collapseExample">
                                                <i class="fa fa-bars" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <div class="row collapse show" id="collapse2">
                                    <input id="txtIdUsuario" type="hidden" value="0" />
                                    <div class="col-sm-6">
                                        <div class="form-group mb-0">
                                            <label for="txtRazonSocialProveedor"
                                                class="col-form-label col-form-label-sm">Apellido:</label>
                                            <label class="form-control form-control-sm model mb-1" readonly
                                                id="lblempleadoapellido"></label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group mb-0">
                                            <label for="txtRucProveedor"
                                                class="col-form-label col-form-label-sm">Nombre:</label>
                                            <label class="form-control form-control-sm model mb-1" readonly
                                                id="lblempleadonombre"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="card shadow mb-2">
                            <div class="card-body p-2">
                                <h6 class="m-0 font-weight-bold text-primary">Detalle cliente</h6>
                                <div class="row align-items-end">
                                    <div class="col-sm-5">
                                        <div class="form-group mb-0">
                                            <label for="txtRazonSocialProveedor"
                                                class="col-form-label col-form-label-sm">Apellido: <span
                                                    class="required">*</span> </label>
                                            <input type="text" class="form-control form-control-sm model" readonly
                                                id="txtclientedocumento" name="RazonSocial" autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group mb-0">
                                            <label for="txtRazonSocialProveedor"
                                                class="col-form-label col-form-label-sm">Nombre: <span
                                                    class="required">*</span></label>
                                            <input type="text" class="form-control form-control-sm model" readonly
                                                id="txtclientenombres" name="RazonSocial" autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group mb-0">
                                            <label class="col-form-label col-form-label-sm">Buscar:</label>
                                            <button id="btnBuscarCliente" type="button"
                                                class="btn btn-sm btn-primary btn-block"><i
                                                    class="fas fa-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group mb-0">
                                            <label for="txtRazonSocialProveedor"
                                                class="col-form-label col-form-label-sm">Direccion:</label>
                                            <input type="text" class="form-control form-control-sm model" readonly
                                                id="txtclientedireccion" name="clientedireccion" autocomplete="off">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="card shadow mb-2">
                            <div class="card-body p-2">
                                <h6 class="m-0 font-weight-bold text-primary">Detalle Producto</h6>
                                <div class="row align-items-end">
                                    <input id="txtIdProducto" type="hidden" value="0" />
                                    <div class="col-sm-2">
                                        <div class="form-group mb-0">
                                            <label for="txtproductocodigo"
                                                class="col-form-label col-form-label-sm">Codigo: <span
                                                    class="required">*</span></label>
                                            <input type="text" class="form-control form-control-sm model" readonly
                                                id="txtproductocodigo" name="Codigo" autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group mb-0">
                                            <label for="txtproductonombre"
                                                class="col-form-label col-form-label-sm">Nombre:</label>
                                            <input type="text" class="form-control form-control-sm model" readonly
                                                id="txtproductonombre" name="Nombre">
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group mb-0">
                                            <label for="txtproductodescripcion"
                                                class="col-form-label col-form-label-sm">Presentación:</label>
                                            <input type="text" class="form-control form-control-sm model" readonly
                                                id="txtproductodescripcion" name="Descripcion" value="">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group mb-0">
                                            <label class="col-form-label col-form-label-sm">Buscar:</label>
                                            <button id="btnBuscarProducto" type="button"
                                                class="btn btn-sm btn-primary btn-block"><i
                                                    class="fas fa-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <div class="form-group mb-0">
                                            <label for="txtproductostock" class="col-form-label col-form-label-sm">En
                                                Stock:</label>
                                            <input type="text" class="form-control form-control-sm model" readonly
                                                id="txtproductostock" name="Codigo">
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group mb-0">
                                            <label for="txtproductoprecio"
                                                class="col-form-label col-form-label-sm">Precio:</label>
                                            <input type="text" class="form-control form-control-sm model" readonly
                                                id="txtproductoprecio" name="Nombre">
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group mb-0">
                                            <label for="txtproductocantidad"
                                                class="col-form-label col-form-label-sm">Cantidad: <span
                                                    class="required">*</span></label>
                                            <input type="number" class="form-control form-control-sm model"
                                                id="txtproductocantidad" name="Descripcion" autocomplete="off" min="0">
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group mb-0">
                                            <label class="col-form-label col-form-label-sm">Agregar:</label>
                                            <button id="btnAgregar" type="button"
                                                class="btn btn-sm btn-success btn-block"><i class="fa fa-plus"
                                                    aria-hidden="true"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <h6 class="m-0 font-weight-bold text-primary">Carrito</h6>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <div class="table-responsive-sm">
                            <table id="tbVenta" class="table table-striped table-bordered nowrap table-sm"
                                style="width:100%">
                                <thead>
                                    <tr>
                                        <th width="8%"></th>
                                        <th width="8%">Cantidad</th>
                                        <th width="40%">Producto</th>
                                        <th width="15%">Presentación</th>
                                        <th width="14%">Precio Unidad</th>
                                        <th width="15%">Importe Total</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>

                    </div>
                </div>

                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="input-group input-group-sm mb-2">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text bg-secondary text-white"
                                            for="inputGroupSelect01">Sub Total C$.</label>
                                    </div>
                                    <input id="txtsubtotal" readonly type="text" class="form-control" value="0">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="input-group input-group-sm mb-2">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text bg-secondary text-white"
                                            for="inputGroupSelect01">Total C$.</label>
                                    </div>
                                    <input id="txttotal" readonly type="text" class="form-control" value="0">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="input-group input-group-sm mb-2">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text bg-secondary text-white"
                                            for="inputGroupSelect01">Monto Pago C$.</label>
                                    </div>
                                    <input id="txtmontopago" type="number" class="form-control" autocomplete="off" min="0" value="0" onchange="calcularCambio()">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="input-group input-group-sm mb-2">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text bg-secondary text-white"
                                            for="inputGroupSelect01">Cambio C$.</label>
                                    </div>
                                    <input id="txtcambio" readonly type="text" class="form-control" value="0.00">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- MODAL PRODUCTOS -->
<div class="modal fade" id="modalProducto" tabindex="-1" role="dialog" data-backdrop="static"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header text-black-50">
                <h5 class="modal-title">Productos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbProducto" class="table table-striped table-bordered nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Precio C$</th>
                                <th>Categoria</th>
                                <th>Marca</th>
                                <th>Stock</th>
                                <th>Contenido Neto</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- MODAL CLIENTES -->
<div class="modal fade" id="modalCliente" tabindex="-1" role="dialog" data-backdrop="static"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header text-black-50">
                <h5 class="modal-title">Clientes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbcliente" class="table table-striped table-bordered nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>#</th>
                                <th>Apellido</th>
                                <th>Nombre</th>
                                <th>Direccion</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts{
<script src="@Url.Content("~/Scripts/Sale/Sale.js")" type="text/javascript"></script>
}
