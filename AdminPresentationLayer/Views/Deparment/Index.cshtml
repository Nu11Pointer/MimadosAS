                    </table>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                <button class="btn btn-primary" type="button" onclick="ShowMunicipalityCreate()">Crear</button>
            </div>
        </div>
    </div>
</div>

